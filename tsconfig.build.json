{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "incremental": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "dist"
  ]
}
